<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="row">
        <%#= devise_error_messages! %>

        <%= hidden_field(:user, :status_id, :value => 1) %>

        <div class="form-group col-xs-12 name_cell">
          <div class="label_block">Имя</div>
          <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
        </div>

        <div class="form-group col-xs-12 email_cell">
          <div class="label_block">Email</div>
          <%= f.email_field :email, class: 'form-control' %>
        </div>        

        <div class="form-group col-xs-12 password_cell">
          <div class="label_block">Пароль</div>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        
        <div class="form-group col-xs-12 password_conformation_cell">
          <div class="label_block">Подтверждение пароля</div>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="form-group col-xs-12">
          <%= f.submit 'Зарегистрироваться', class: 'btn btn-default', id: 'commitRegistration' %>      
        </div>   
      </div>
    </div>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
