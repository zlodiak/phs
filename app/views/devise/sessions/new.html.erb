<h2>Форма входа</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-xs-4">
      <div class="row">
        <div class="form-group col-xs-12">
          <div class="label_block"><%= f.label :email %></div>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>

        <div class="form-group col-xs-12">
          <div class="label_block"><%= f.label :password %></div>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        
        <div class="form-group col-xs-12">
          <div class=""><%= f.check_box :remember_me %>&nbsp;<%= f.label 'Запомнить меня' %></div>
        </div>
        
        <div class="form-group col-xs-12 col-sm-6 col-md-4">
          <%= f.submit 'Войти', class: 'btn btn-default' %>      
        </div>

        <div class="form-group col-xs-12 col-sm-6 col-md-8">
          <%= link_to 'Восстановление пароля', new_user_password_path %>     
        </div>    
      </div>
    </div>
  </div>
<% end %>

