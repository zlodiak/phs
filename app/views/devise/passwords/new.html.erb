<h2>Восстановление пароля</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'restore_pass_form' }) do |f| %>
  <div class="row">
    <div class="col-xs-4">
      <div class="row">
        <%#= devise_error_messages! %>

        <div class="form-group col-xs-12">
          <div class="label_block">Email</div>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>


        
        <div class="form-group col-xs-12">
          <%= f.submit 'Выслать новый пароль', class: 'btn btn-default' %>      
        </div>   
      </div>
    </div>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
