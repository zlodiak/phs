<%= form_for [@user, @poll] do |f| %>
  <div class="row">
    <div class="form-group col-xs-12 col-sm-6">
      <div class="label_block">Название</div>
      <%= f.text_field(:title, class: 'form-control') %>
    </div>

    <div class="form-group col-xs-12 col-sm-6">
      <div class="label_block">Описание</div>
      <%= f.text_area(:description, rows: 4, class: 'form-control') %>
    </div>

    <div class="form-group col-xs-12 col-sm-6 pull-right">
      <%= f.submit 'Создать голосование', class: 'btn btn-default pull-right', id: 'createPollSubmit' %>      
    </div>       
  </div>
<% end %>



