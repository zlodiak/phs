<!DOCTYPE html>

<html lang="ru">
  <head>
  <%= render 'layouts/head' %>
  </head>

  <body class="admin">
    <%= render 'layouts/nav_main' %>

    <div class="container">
      <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-9">
          <%= render 'layouts/jumbotron' %>

          <div class="row">
            <div class="col-xs-12">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>

              <% if user_signed_in? %>
                  <span>Здравствуйте, <%= current_user.email %></span>
                  <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
              <% else %>
                  <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
              <% end %>
              
              <%= yield %>
            </div>
          </div>
        </div>        

        <%= render 'layouts/sidebar' %>
      </div>

      <%= render 'layouts/footer' %>

      <%= render 'layouts/modals' %>
    </div>
  </body>
</html>
