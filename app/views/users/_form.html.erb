<%= form_for @user do |f| %>
  <div class="row">
    <div class="form-group col-xs-12">
      <label for="name">Название</label>
      <%= f.text_field :name, class: "form-control user_name" %>
    </div>

    <div class="form-group col-xs-12">
      <%= f.submit 'Создать альбом', class: 'btn btn-default pull-right' %>      
    </div>
  </div>
<% end %>